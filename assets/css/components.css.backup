/* Components CSS - Reusable UI Components */

/* Modal Component */
.modal {
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    z-index: 10000;
    display: flex;
    align-items: center;
    justify-content: center;
    opacity: 0;
    visibility: hidden;
    transition: var(--transition-normal);
}

.modal[aria-hidden="false"] {
    opacity: 1;
    visibility: visible;
}

.modal-backdrop {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: rgba(0, 0, 0, 0.8);
    backdrop-filter: blur(4px);
}

.modal-content {
    position: relative;
    background: var(--bg-card);
    border: 1px solid var(--border-primary);
    border-radius: var(--radius-xl);
    padding: var(--space-2xl);
    max-width: 600px;
    width: 90%;
    max-height: 80vh;
    overflow-y: auto;
    box-shadow: var(--shadow-lg);
    transform: scale(0.95);
    transition: transform var(--transition-normal);
}

.modal[aria-hidden="false"] .modal-content {
    transform: scale(1);
}

.modal-content h2 {
    font-size: 1.75rem;
    margin-bottom: var(--space-sm);
    color: var(--text-primary);
    text-align: center;
}

.modal-subtitle {
    color: var(--text-secondary);
    text-align: center;
    margin-bottom: var(--space-xl);
}

.modal-close {
    position: absolute;
    top: var(--space-lg);
    right: var(--space-lg);
    color: var(--text-secondary);
    padding: var(--space-sm);
    border-radius: var(--radius-md);
    transition: var(--transition-fast);
}

.modal-close:hover {
    color: var(--text-primary);
    background: var(--bg-tertiary);
}

/* Persona Grid */
.persona-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
    gap: var(--space-lg);
}

.persona-card {
    background: var(--bg-secondary);
    border: 2px solid var(--border-primary);
    border-radius: var(--radius-lg);
    padding: var(--space-xl);
    text-align: center;
    transition: var(--transition-normal);
    cursor: pointer;
    position: relative;
    overflow: hidden;
}

.persona-card:hover {
    border-color: var(--accent-primary);
    transform: translateY(-4px);
    box-shadow: var(--shadow-glow);
}

.persona-card.active {
    border-color: var(--accent-primary);
    background: rgba(97, 218, 251, 0.05);
}

.persona-card i {
    font-size: 2rem;
    color: var(--accent-primary);
    margin-bottom: var(--space-md);
    display: block;
}

.persona-card h3 {
    font-size: 1.25rem;
    margin-bottom: var(--space-sm);
    color: var(--text-primary);
}

.persona-card p {
    color: var(--text-secondary);
    font-size: 0.875rem;
    line-height: 1.5;
}

/* Button Variations */
.btn-group {
    display: flex;
    gap: var(--space-md);
    flex-wrap: wrap;
}

.btn-small {
    padding: var(--space-sm) var(--space-lg);
    font-size: 0.875rem;
}

.btn-large {
    padding: var(--space-lg) var(--space-2xl);
    font-size: 1.125rem;
}

.btn-icon-only {
    padding: var(--space-md);
    width: auto;
    height: auto;
    aspect-ratio: 1;
    display: flex;
    align-items: center;
    justify-content: center;
}

/* Loading States */
.loading {
    position: relative;
    pointer-events: none;
}

.loading::after {
    content: '';
    position: absolute;
    top: 50%;
    left: 50%;
    width: 20px;
    height: 20px;
    margin: -10px 0 0 -10px;
    border: 2px solid transparent;
    border-top: 2px solid var(--accent-primary);
    border-radius: 50%;
    animation: spin 1s linear infinite;
}

@keyframes spin {
    0% { transform: rotate(0deg); }
    100% { transform: rotate(360deg); }
}

/* Card Components */
.card {
    background: var(--bg-card);
    border: 1px solid var(--border-primary);
    border-radius: var(--radius-lg);
    padding: var(--space-lg);
    transition: var(--transition-normal);
}

.card:hover {
    border-color: var(--border-secondary);
    box-shadow: var(--shadow-md);
}

.card-header {
    margin-bottom: var(--space-lg);
    padding-bottom: var(--space-lg);
    border-bottom: 1px solid var(--border-primary);
}

.card-title {
    font-size: 1.25rem;
    margin-bottom: var(--space-sm);
    color: var(--text-primary);
}

.card-subtitle {
    color: var(--text-secondary);
    font-size: 0.875rem;
}

.card-body {
    margin-bottom: var(--space-lg);
}

.card-footer {
    padding-top: var(--space-lg);
    border-top: 1px solid var(--border-primary);
    display: flex;
    justify-content: space-between;
    align-items: center;
}

/* Badge Component */
.badge {
    display: inline-flex;
    align-items: center;
    gap: var(--space-xs);
    padding: var(--space-xs) var(--space-sm);
    background: var(--bg-tertiary);
    border: 1px solid var(--border-primary);
    border-radius: var(--radius-sm);
    font-size: 0.75rem;
    font-weight: 500;
    color: var(--text-secondary);
}

.badge-primary {
    background: rgba(97, 218, 251, 0.1);
    border-color: rgba(97, 218, 251, 0.2);
    color: var(--accent-primary);
}

.badge-secondary {
    background: rgba(255, 107, 157, 0.1);
    border-color: rgba(255, 107, 157, 0.2);
    color: var(--accent-secondary);
}

.badge-success {
    background: rgba(82, 216, 105, 0.1);
    border-color: rgba(82, 216, 105, 0.2);
    color: var(--accent-success);
}

/* Tooltip Component */
.tooltip {
    position: relative;
}

.tooltip::before {
    content: attr(data-tooltip);
    position: absolute;
    bottom: 100%;
    left: 50%;
    transform: translateX(-50%) translateY(-8px);
    background: var(--bg-card);
    color: var(--text-primary);
    padding: var(--space-sm) var(--space-md);
    border-radius: var(--radius-md);
    font-size: 0.75rem;
    white-space: nowrap;
    opacity: 0;
    visibility: hidden;
    transition: var(--transition-fast);
    border: 1px solid var(--border-primary);
    box-shadow: var(--shadow-md);
    z-index: 1000;
}

.tooltip::after {
    content: '';
    position: absolute;
    bottom: 100%;
    left: 50%;
    transform: translateX(-50%) translateY(-1px);
    border: 4px solid transparent;
    border-top-color: var(--border-primary);
    opacity: 0;
    visibility: hidden;
    transition: var(--transition-fast);
}

.tooltip:hover::before,
.tooltip:hover::after {
    opacity: 1;
    visibility: visible;
}

/* Progress Component */
.progress {
    width: 100%;
    height: 8px;
    background: var(--bg-tertiary);
    border-radius: var(--radius-sm);
    overflow: hidden;
}

.progress-bar {
    height: 100%;
    background: linear-gradient(90deg, var(--accent-primary), var(--accent-secondary));
    border-radius: var(--radius-sm);
    transition: width var(--transition-slow);
    position: relative;
}

.progress-bar::after {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.2), transparent);
    animation: shimmer 2s infinite;
}

@keyframes shimmer {
    0% { transform: translateX(-100%); }
    100% { transform: translateX(100%); }
}

/* Divider Component */
.divider {
    height: 1px;
    background: var(--border-primary);
    margin: var(--space-xl) 0;
    position: relative;
}

.divider-text {
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    background: var(--bg-primary);
    padding: 0 var(--space-md);
    color: var(--text-muted);
    font-size: 0.875rem;
}

/* Alert Component */
.alert {
    padding: var(--space-lg);
    border-radius: var(--radius-md);
    border: 1px solid;
    margin-bottom: var(--space-lg);
    display: flex;
    align-items: flex-start;
    gap: var(--space-md);
}

.alert-info {
    background: rgba(97, 218, 251, 0.1);
    border-color: rgba(97, 218, 251, 0.2);
    color: var(--accent-primary);
}

.alert-success {
    background: rgba(82, 216, 105, 0.1);
    border-color: rgba(82, 216, 105, 0.2);
    color: var(--accent-success);
}

.alert-warning {
    background: rgba(255, 211, 61, 0.1);
    border-color: rgba(255, 211, 61, 0.2);
    color: var(--accent-tertiary);
}

.alert-error {
    background: rgba(239, 68, 68, 0.1);
    border-color: rgba(239, 68, 68, 0.2);
    color: #ef4444;
}

.alert-icon {
    flex-shrink: 0;
    margin-top: 2px;
}

.alert-content h4 {
    margin-bottom: var(--space-sm);
    font-weight: 600;
}

.alert-content p {
    margin: 0;
    opacity: 0.9;
}

/* Page Components */
.page-header {
    padding: calc(4rem + var(--space-2xl)) 0 var(--space-2xl);
    background: var(--bg-secondary);
    border-bottom: 1px solid var(--border-primary);
}

.page-header-content {
    text-align: center;
    max-width: 800px;
    margin: 0 auto;
}

.page-breadcrumb {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: var(--space-sm);
    margin-bottom: var(--space-lg);
    font-size: 0.875rem;
    color: var(--text-secondary);
}

.page-breadcrumb a {
    color: var(--accent-primary);
    transition: var(--transition-fast);
}

.page-breadcrumb a:hover {
    color: var(--accent-secondary);
}

.page-breadcrumb i {
    font-size: 0.75rem;
}

.page-title {
    font-size: 3rem;
    font-weight: 700;
    margin-bottom: var(--space-lg);
    background: linear-gradient(135deg, var(--text-primary), var(--accent-primary));
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
}

.page-description {
    font-size: 1.25rem;
    color: var(--text-secondary);
    line-height: 1.6;
}

/* About Page Specific */
.about-content {
    padding: var(--space-3xl) 0;
}

.about-grid {
    display: grid;
    grid-template-columns: 1fr 300px;
    gap: var(--space-3xl);
    align-items: start;
}

.about-main {
    display: flex;
    flex-direction: column;
    gap: var(--space-3xl);
}

.about-section {
    background: var(--bg-card);
    border: 1px solid var(--border-primary);
    border-radius: var(--radius-lg);
    padding: var(--space-2xl);
}

.about-section h2 {
    font-size: 1.75rem;
    font-weight: 600;
    margin-bottom: var(--space-xl);
    color: var(--text-primary);
}

.about-text p {
    margin-bottom: var(--space-lg);
    line-height: 1.7;
    color: var(--text-secondary);
}

.about-text p:last-child {
    margin-bottom: 0;
}

/* Skills Grid */
.skills-grid {
    display: grid;
    gap: var(--space-xl);
}

.skill-category h3 {
    display: flex;
    align-items: center;
    gap: var(--space-sm);
    font-size: 1.25rem;
    font-weight: 600;
    margin-bottom: var(--space-lg);
    color: var(--text-primary);
}

.skill-category h3 i {
    color: var(--accent-primary);
}

.skill-tags {
    display: flex;
    flex-wrap: wrap;
    gap: var(--space-sm);
}

.skill-tag {
    display: inline-block;
    background: var(--bg-tertiary);
    color: var(--text-primary);
    padding: var(--space-sm) var(--space-md);
    border-radius: var(--radius-md);
    font-size: 0.875rem;
    font-weight: 500;
    border: 1px solid var(--border-secondary);
    transition: var(--transition-fast);
}

.skill-tag:hover {
    background: var(--accent-primary);
    color: var(--bg-primary);
    border-color: var(--accent-primary);
}

/* Timeline */
.timeline {
    position: relative;
    padding-left: var(--space-xl);
}

.timeline::before {
    content: '';
    position: absolute;
    left: 12px;
    top: 0;
    bottom: 0;
    width: 2px;
    background: var(--border-primary);
}

.timeline-item {
    position: relative;
    margin-bottom: var(--space-2xl);
}

.timeline-item:last-child {
    margin-bottom: 0;
}

.timeline-marker {
    position: absolute;
    left: -31px;
    top: 0;
    width: 24px;
    height: 24px;
    background: var(--accent-primary);
    border: 3px solid var(--bg-card);
    border-radius: 50%;
    box-shadow: 0 0 0 3px var(--border-primary);
}

.timeline-content h3 {
    font-size: 1.25rem;
    font-weight: 600;
    margin-bottom: var(--space-xs);
    color: var(--text-primary);
}

.timeline-period {
    font-size: 0.875rem;
    color: var(--accent-primary);
    font-weight: 500;
    margin-bottom: var(--space-sm);
}

.timeline-content p {
    color: var(--text-secondary);
    line-height: 1.6;
}

/* Sidebar */
.about-sidebar {
    display: flex;
    flex-direction: column;
    gap: var(--space-xl);
}

.sidebar-card {
    background: var(--bg-card);
    border: 1px solid var(--border-primary);
    border-radius: var(--radius-lg);
    padding: var(--space-xl);
}

.sidebar-card h3 {
    display: flex;
    align-items: center;
    gap: var(--space-sm);
    font-size: 1.125rem;
    font-weight: 600;
    margin-bottom: var(--space-lg);
    color: var(--text-primary);
}

.sidebar-card h3 i {
    color: var(--accent-primary);
}

.sidebar-card p {
    color: var(--text-secondary);
    line-height: 1.6;
    margin-bottom: var(--space-lg);
}

.fact-list, .focus-list {
    display: flex;
    flex-direction: column;
    gap: var(--space-md);
}

.fact-item, .focus-item {
    display: flex;
    align-items: center;
    gap: var(--space-sm);
    color: var(--text-secondary);
    font-size: 0.875rem;
}

.fact-item i, .focus-item i {
    color: var(--accent-primary);
    font-size: 1rem;
    width: 20px;
    flex-shrink: 0;
}

/* Blog Page Specific */
.blog-content {
    padding: var(--space-3xl) 0;
}

.blog-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
    gap: var(--space-xl);
    margin-bottom: var(--space-3xl);
}

.blog-card {
    background: var(--bg-card);
    border: 1px solid var(--border-primary);
    border-radius: var(--radius-lg);
    overflow: hidden;
    transition: var(--transition-normal);
    text-decoration: none;
    color: inherit;
    display: block;
}

.blog-card:hover {
    transform: translateY(-4px);
    box-shadow: var(--shadow-glow);
}

.blog-card-image {
    width: 100%;
    height: 200px;
    object-fit: cover;
    background: var(--bg-tertiary);
    display: block;
}

.blog-card-content {
    padding: var(--space-xl);
}

.blog-meta {
    display: flex;
    align-items: center;
    gap: var(--space-md);
    margin-bottom: var(--space-md);
    font-size: 0.875rem;
    color: var(--text-secondary);
}

.blog-card h3 {
    font-size: 1.5rem;
    font-weight: 600;
    margin-bottom: var(--space-md);
    color: var(--text-primary);
    line-height: 1.3;
}

.blog-excerpt {
    color: var(--text-secondary);
    line-height: 1.6;
    margin-bottom: var(--space-lg);
}

.blog-tags {
    display: flex;
    flex-wrap: wrap;
    gap: var(--space-sm);
    margin-bottom: var(--space-lg);
}

.blog-tag {
    background: var(--bg-tertiary);
    color: var(--text-secondary);
    padding: var(--space-xs) var(--space-sm);
    border-radius: var(--radius-sm);
    font-size: 0.75rem;
    font-weight: 500;
}

.blog-footer {
    display: flex;
    justify-content: space-between;
    align-items: center;
    gap: var(--space-md);
    flex-wrap: wrap;
}

.blog-actions {
    display: flex;
    gap: var(--space-sm);
    flex-wrap: wrap;
}

.blog-link {
    display: flex;
    align-items: center;
    gap: var(--space-sm);
    font-weight: 500;
    transition: var(--transition-fast);
    padding: var(--space-sm) var(--space-md);
    border-radius: var(--radius-md);
    text-decoration: none;
    font-size: 0.875rem;
}

.blog-link.primary {
    background: var(--bg-tertiary);
    border: 1px solid var(--border-secondary);
}

.blog-link.secondary {
    color: var(--text-secondary);
}

.blog-link:hover {
    transform: translateY(-2px);
}

/* Featured post styles */
.featured-post-section {
    margin-bottom: var(--space-xl);
}

.featured-post {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 0;
    background: var(--bg-card);
    border: 1px solid var(--border-primary);
    border-radius: var(--radius-lg);
    overflow: hidden;
    transition: var(--transition-normal);
    min-height: 300px;
}

.featured-post:hover {
    transform: translateY(-2px);
    box-shadow: var(--shadow-glow);
}

.featured-post-image {
    position: relative;
    overflow: hidden;
    min-height: 300px;
}

.featured-post-image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: var(--transition-slow);
}

.featured-post:hover .featured-post-image img {
    transform: scale(1.02);
}

.featured-badge {
    position: absolute;
    top: var(--space-md);
    left: var(--space-md);
    display: flex;
    align-items: center;
    gap: var(--space-xs);
    padding: var(--space-xs) var(--space-sm);
    border-radius: var(--radius-full);
    font-size: 0.7rem;
    font-weight: 600;
    backdrop-filter: blur(10px);
    border: 1px solid rgba(255, 255, 255, 0.2);
    z-index: 2;
}

.featured-post-content {
    padding: var(--space-xl);
    display: flex;
    flex-direction: column;
    justify-content: space-between;
}

.featured-meta {
    display: flex;
    align-items: center;
    gap: var(--space-md);
    margin-bottom: var(--space-md);
    font-size: 0.8rem;
    color: var(--text-secondary);
    flex-wrap: wrap;
}

.featured-category {
    padding: var(--space-xs) var(--space-sm);
    background: var(--bg-tertiary);
    border-radius: var(--radius-sm);
    font-size: 0.7rem;
    font-weight: 500;
}

.featured-title {
    font-size: 1.5rem;
    font-weight: 700;
    color: var(--text-primary);
    margin-bottom: var(--space-md);
    line-height: 1.3;
}

.featured-excerpt {
    color: var(--text-secondary);
    line-height: 1.5;
    margin-bottom: var(--space-lg);
    font-size: 0.95rem;
    flex-grow: 1;
}

.featured-link {
    display: inline-flex;
    align-items: center;
    gap: var(--space-sm);
    font-weight: 500;
    transition: var(--transition-fast);
    align-self: flex-start;
    padding: var(--space-sm) var(--space-lg);
    border-radius: var(--radius-md);
    border: 1px solid var(--border-secondary);
    background: var(--bg-secondary);
    font-size: 0.875rem;
    text-decoration: none;
    color: var(--text-primary);
}

.featured-link:hover {
    transform: translateY(-1px);
}

/* No posts message */
.no-posts-message {
    text-align: center;
    padding: var(--space-3xl);
    color: var(--text-secondary);
}

.no-posts-message i {
    font-size: 3rem;
    margin-bottom: var(--space-lg);
    opacity: 0.5;
}

.no-posts-message h3 {
    font-size: 1.5rem;
    margin-bottom: var(--space-sm);
    color: var(--text-primary);
}

/* Blog loading state */
.blog-loading {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    padding: var(--space-3xl);
    color: var(--text-secondary);
}

.blog-loading i {
    font-size: 2rem;
    margin-bottom: var(--space-md);
    animation: spin 1s linear infinite;
}

@keyframes spin {
    from { transform: rotate(0deg); }
    to { transform: rotate(360deg); }
}

/* Mobile responsiveness */
@media (max-width: 768px) {
    .blog-grid {
        grid-template-columns: 1fr;
        gap: var(--space-lg);
    }
    
    .featured-post {
        grid-template-columns: 1fr;
        gap: 0;
        min-height: auto;
    }
    
    .featured-post-image {
        min-height: 220px;
        max-height: 220px;
        overflow: hidden;
    }
    
    .featured-post-image img {
        width: 100%;
        height: 220px;
        object-fit: cover;
        object-position: center;
    }
    
    .featured-post-content {
        padding: var(--space-lg);
    }
    
    .featured-title {
        font-size: 1.25rem;
        line-height: 1.3;
    }
    
    .featured-excerpt {
        font-size: 0.9rem;
        line-height: 1.5;
    }
    
    .featured-meta {
        font-size: 0.75rem;
        gap: var(--space-sm);
    }
    
    .blog-card h3 {
        font-size: 1.25rem;
    }
    
    .blog-controls {
        flex-direction: column;
        gap: var(--space-md);
    }
    
    .blog-search {
        max-width: none;
    }
    
    .blog-categories {
        justify-content: center;
    }
    
    .blog-footer {
        flex-direction: column;
        align-items: flex-start;
        gap: var(--space-sm);
    }
    
    .blog-actions {
        width: 100%;
        justify-content: space-between;
    }
}

@media (max-width: 480px) {
    .blog-card-content {
        padding: var(--space-lg);
    }
    
    .featured-post-content {
        padding: var(--space-md);
    }
    
    .featured-post-image {
        min-height: 180px;
        max-height: 180px;
    }
    
    .featured-post-image img {
        height: 180px;
    }
    
    .featured-title {
        font-size: 1.1rem;
    }
    
    .featured-excerpt {
        font-size: 0.85rem;
    }
    
    .blog-controls {
        padding: var(--space-md);
    }
    
    .blog-categories {
        padding: var(--space-md);
    }
    
    .category-tag {
        font-size: 0.8rem;
        padding: var(--space-xs) var(--space-sm);
    }
}

/* Projects Page Specific */
.projects-content {
    padding: var(--space-3xl) 0;
}

.projects-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(350px, 1fr));
    gap: var(--space-xl);
}

.project-card {
    background: var(--bg-card);
    border: 1px solid var(--border-primary);
    border-radius: var(--radius-lg);
    overflow: hidden;
    transition: var(--transition-normal);
}

.project-card:hover {
    border-color: var(--accent-primary);
    transform: translateY(-4px);
    box-shadow: var(--shadow-glow);
}

.project-image {
    height: 200px;
    background: var(--bg-tertiary);
    display: flex;
    align-items: center;
    justify-content: center;
    border-bottom: 1px solid var(--border-primary);
}

.project-image i {
    font-size: 3rem;
    color: var(--accent-primary);
}

.project-content {
    padding: var(--space-xl);
}

.project-header {
    display: flex;
    align-items: center;
    justify-content: space-between;
    margin-bottom: var(--space-md);
}

.project-title {
    font-size: 1.25rem;
    font-weight: 600;
    color: var(--text-primary);
}

.project-status {
    padding: var(--space-xs) var(--space-sm);
    border-radius: var(--radius-sm);
    font-size: 0.75rem;
    font-weight: 500;
    background: var(--bg-tertiary);
    color: var(--text-secondary);
}

.project-status.active {
    background: rgba(34, 197, 94, 0.1);
    color: #22c55e;
}

.project-description {
    color: var(--text-secondary);
    line-height: 1.6;
    margin-bottom: var(--space-lg);
}

.project-tech {
    display: flex;
    flex-wrap: wrap;
    gap: var(--space-sm);
    margin-bottom: var(--space-lg);
}

.tech-tag {
    background: var(--bg-tertiary);
    color: var(--text-primary);
    padding: var(--space-xs) var(--space-sm);
    border-radius: var(--radius-sm);
    font-size: 0.75rem;
    font-weight: 500;
}

.project-links {
    display: flex;
    gap: var(--space-md);
}

.project-link {
    display: flex;
    align-items: center;
    gap: var(--space-xs);
    color: var(--accent-primary);
    font-size: 0.875rem;
    font-weight: 500;
    transition: var(--transition-fast);
}

.project-link:hover {
    color: var(--accent-secondary);
}

/* Projects CTA */
.projects-cta {
    margin-top: var(--space-3xl);
    padding: var(--space-3xl);
    background: var(--bg-card);
    border: 1px solid var(--border-primary);
    border-radius: var(--radius-xl);
    text-align: center;
}

.cta-content h2 {
    font-size: 2rem;
    font-weight: 600;
    margin-bottom: var(--space-lg);
    color: var(--text-primary);
}

.cta-content p {
    font-size: 1.125rem;
    color: var(--text-secondary);
    margin-bottom: var(--space-2xl);
    max-width: 600px;
    margin-left: auto;
    margin-right: auto;
}

.cta-actions {
    display: flex;
    gap: var(--space-lg);
    justify-content: center;
    flex-wrap: wrap;
}

/* Contact Page Specific */
.contact-content {
    padding: var(--space-3xl) 0;
}

.contact-grid {
    display: grid;
    grid-template-columns: 1fr 400px;
    gap: var(--space-3xl);
    align-items: start;
}

.contact-form {
    background: var(--bg-card);
    border: 1px solid var(--border-primary);
    border-radius: var(--radius-lg);
    padding: var(--space-2xl);
}

/* Contact Form Header */
.form-header {
    margin-bottom: var(--space-2xl);
}

.form-header h2 {
    font-size: 1.75rem;
    font-weight: 600;
    margin-bottom: var(--space-md);
    color: var(--text-primary);
}

.form-header p {
    color: var(--text-secondary);
    line-height: 1.6;
}

.form-group {
    margin-bottom: var(--space-lg);
}

.form-label {
    display: block;
    font-weight: 500;
    margin-bottom: var(--space-sm);
    color: var(--text-primary);
}

.form-input, .form-textarea {
    width: 100%;
    padding: var(--space-md);
    background: var(--bg-tertiary);
    border: 1px solid var(--border-secondary);
    border-radius: var(--radius-md);
    color: var(--text-primary);
    font-family: inherit;
    font-size: 1rem;
    transition: var(--transition-fast);
}

.form-input:focus, .form-textarea:focus {
    outline: none;
    border-color: var(--accent-primary);
    box-shadow: 0 0 0 3px rgba(97, 218, 251, 0.1);
}

.form-textarea {
    resize: vertical;
    min-height: 120px;
}

.contact-info {
    display: flex;
    flex-direction: column;
    gap: var(--space-xl);
}

.contact-item {
    background: var(--bg-card);
    border: 1px solid var(--border-primary);
    border-radius: var(--radius-lg);
    padding: var(--space-xl);
    text-align: center;
}

.contact-item i {
    font-size: 2rem;
    color: var(--accent-primary);
    margin-bottom: var(--space-md);
    display: block;
}

.contact-item h3 {
    font-size: 1.125rem;
    font-weight: 600;
    margin-bottom: var(--space-sm);
    color: var(--text-primary);
}

.contact-item p {
    color: var(--text-secondary);
}

.contact-item a {
    color: var(--accent-primary);
    transition: var(--transition-fast);
}

.contact-item a:hover {
    color: var(--accent-secondary);
}

/* Contact Additional Info */
.contact-additional {
    margin-top: var(--space-3xl);
    padding: var(--space-3xl);
    background: var(--bg-card);
    border: 1px solid var(--border-primary);
    border-radius: var(--radius-xl);
    text-align: center;
}

.additional-content h2 {
    font-size: 2rem;
    font-weight: 600;
    margin-bottom: var(--space-2xl);
    color: var(--text-primary);
}

.additional-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
    gap: var(--space-xl);
}

.additional-item {
    text-align: center;
}

.additional-item i {
    font-size: 2.5rem;
    color: var(--accent-primary);
    margin-bottom: var(--space-lg);
    display: block;
}

.additional-item h3 {
    font-size: 1.25rem;
    font-weight: 600;
    margin-bottom: var(--space-md);
    color: var(--text-primary);
}

.additional-item p {
    color: var(--text-secondary);
    line-height: 1.6;
}

/* Blog Newsletter */
.blog-newsletter {
    margin-top: var(--space-3xl);
    padding: var(--space-3xl);
    background: var(--bg-card);
    border: 1px solid var(--border-primary);
    border-radius: var(--radius-xl);
    text-align: center;
}

.newsletter-content h2 {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: var(--space-sm);
    font-size: 1.75rem;
    font-weight: 600;
    margin-bottom: var(--space-lg);
    color: var(--text-primary);
}

.newsletter-content h2 i {
    color: var(--accent-primary);
}

.newsletter-content > p {
    font-size: 1.125rem;
    color: var(--text-secondary);
    margin-bottom: var(--space-xl);
    max-width: 500px;
    margin-left: auto;
    margin-right: auto;
}

.newsletter-form .form-group {
    display: flex;
    gap: var(--space-md);
    max-width: 400px;
    margin: 0 auto var(--space-lg);
}

.newsletter-form .form-input {
    flex: 1;
    margin-bottom: 0;
}

.newsletter-note {
    font-size: 0.875rem;
    color: var(--text-secondary);
    margin: 0;
}

/* Blog-specific components */
.blog-controls {
    display: flex;
    align-items: center;
    justify-content: space-between;
    gap: var(--space-lg);
    margin-bottom: var(--space-lg);
    padding: var(--space-lg);
    background: var(--bg-card);
    border: 1px solid var(--border-primary);
    border-radius: var(--radius-lg);
}

.blog-search {
    flex: 1;
    max-width: 400px;
}

.search-input-group {
    position: relative;
    display: flex;
    align-items: center;
}

.search-input-group i {
    position: absolute;
    right: var(--space-lg);
    color: var(--text-secondary);
    z-index: 1;
    font-size: 1rem;
    transition: var(--transition-fast);
    pointer-events: none;
}

.search-input-group input {
    width: 100%;
    padding: var(--space-md) calc(var(--space-xl) + 28px) var(--space-md) var(--space-xl);
    background: var(--bg-secondary);
    border: 1px solid var(--border-secondary);
    border-radius: 50px;
    color: var(--text-primary);
    font-size: 0.9rem;
    transition: var(--transition-normal);
    font-family: var(--font-primary);
    box-shadow: inset 0 1px 2px rgba(0, 0, 0, 0.05);
}

.search-input-group input::placeholder {
    color: var(--text-muted);
    font-weight: 400;
}

.search-input-group input:focus {
    outline: none;
    border-color: var(--accent-primary);
    background: var(--bg-tertiary);
    box-shadow: 0 0 0 3px rgba(var(--accent-primary-rgb), 0.1), inset 0 1px 2px rgba(0, 0, 0, 0.05);
}

.search-input-group input:focus + i,
.search-input-group:hover i {
    color: var(--accent-primary);
}

.filter-dropdown {
    position: relative;
}

.filter-btn {
    display: flex;
    align-items: center;
    gap: var(--space-sm);
    padding: var(--space-md) var(--space-lg);
    background: var(--bg-secondary);
    border: 1px solid var(--border-secondary);
    border-radius: var(--radius-md);
    color: var(--text-primary);
    font-size: 0.875rem;
    cursor: pointer;
    transition: var(--transition-normal);
}

.filter-btn:hover {
    border-color: var(--border-primary);
    background: var(--bg-tertiary);
}

.filter-btn i {
    width: 16px;
    height: 16px;
    transition: transform var(--transition-normal);
}

.filter-dropdown.active .filter-btn i {
    transform: rotate(180deg);
}

.filter-options {
    position: absolute;
    top: calc(100% + 8px);
    right: 0;
    min-width: 160px;
    background: var(--bg-card);
    border: 1px solid var(--border-primary);
    border-radius: var(--radius-md);
    box-shadow: var(--shadow-lg);
    opacity: 0;
    visibility: hidden;
    transform: translateY(-8px);
    transition: var(--transition-normal);
    z-index: 100;
}

.filter-dropdown.active .filter-options {
    opacity: 1;
    visibility: visible;
    transform: translateY(0);
}

.filter-option {
    padding: var(--space-md) var(--space-lg);
    font-size: 0.875rem;
    cursor: pointer;
    transition: var(--transition-normal);
    border-bottom: 1px solid var(--border-secondary);
}

.filter-option:last-child {
    border-bottom: none;
}

.filter-option:hover {
    background: var(--bg-secondary);
}

.blog-categories {
    display: flex;
    flex-wrap: wrap;
    gap: var(--space-md);
    margin-bottom: var(--space-2xl);
    padding: var(--space-lg);
    background: var(--bg-card);
    border: 1px solid var(--border-primary);
    border-radius: var(--radius-lg);
}

.category-tag {
    padding: var(--space-sm) var(--space-md);
    background: var(--bg-secondary);
    border: 1px solid var(--border-secondary);
    border-radius: var(--radius-full);
    color: var(--text-secondary);
    font-size: 0.875rem;
    font-weight: 500;
    cursor: pointer;
    transition: var(--transition-normal);
    white-space: nowrap;
}

.category-tag:hover {
    background: var(--bg-tertiary);
    border-color: var(--border-primary);
    color: var(--text-primary);
}

.category-tag.active {
    background: var(--accent-primary);
    border-color: var(--accent-primary);
    color: white;
}

/* Blog Post Styles */
.blog-post {
    max-width: 800px;
    margin: 0 auto;
    padding: var(--space-2xl) 0;
}

.blog-post-header {
    margin-bottom: var(--space-2xl);
}

.blog-breadcrumb a {
    display: inline-flex;
    align-items: center;
    gap: var(--space-sm);
    color: var(--text-secondary);
    text-decoration: none;
    font-size: 0.875rem;
    margin-bottom: var(--space-lg);
    transition: var(--transition-normal);
}

.blog-breadcrumb a:hover {
    color: var(--accent-primary);
}

.blog-post-title {
    font-size: 2.5rem;
    font-weight: 700;
    color: var(--text-primary);
    line-height: 1.2;
    margin-bottom: var(--space-md);
}

.blog-post-meta {
    display: flex;
    align-items: center;
    gap: var(--space-lg);
    color: var(--text-secondary);
    font-size: 0.875rem;
    margin-bottom: var(--space-lg);
    padding-bottom: var(--space-lg);
    border-bottom: 1px solid var(--border-secondary);
}

.blog-post-meta i {
    width: 16px;
    height: 16px;
}

.blog-post-tags {
    display: flex;
    flex-wrap: wrap;
    gap: var(--space-sm);
    margin-bottom: var(--space-xl);
}

.blog-post-tag {
    padding: var(--space-xs) var(--space-sm);
    background: var(--bg-secondary);
    border: 1px solid var(--border-secondary);
    border-radius: var(--radius-md);
    color: var(--text-secondary);
    font-size: 0.75rem;
    font-weight: 500;
}

.blog-post-content {
    color: var(--text-primary);
    line-height: 1.7;
}

.blog-post-content h2 {
    font-size: 1.75rem;
    font-weight: 600;
    color: var(--text-primary);
    margin: var(--space-2xl) 0 var(--space-lg);
    line-height: 1.3;
}

.blog-post-content h3 {
    font-size: 1.5rem;
    font-weight: 600;
    color: var(--text-primary);
    margin: var(--space-xl) 0 var(--space-md);
    line-height: 1.3;
}

.blog-post-content p {
    margin-bottom: var(--space-lg);
}

.blog-post-content ul, .blog-post-content ol {
    margin: var(--space-lg) 0;
    padding-left: var(--space-xl);
}

.blog-post-content li {
    margin-bottom: var(--space-sm);
}

.blog-post-content blockquote {
    margin: var(--space-xl) 0;
    padding: var(--space-lg);
    background: var(--bg-secondary);
    border-left: 4px solid var(--accent-primary);
    border-radius: var(--radius-md);
    font-style: italic;
    color: var(--text-secondary);
}

.blog-post-content pre {
    margin: var(--space-lg) 0;
    padding: var(--space-lg);
    background: var(--bg-tertiary);
    border: 1px solid var(--border-secondary);
    border-radius: var(--radius-md);
    overflow-x: auto;
    font-family: var(--font-mono);
    font-size: 0.875rem;
    line-height: 1.5;
}

.blog-post-content code {
    font-family: var(--font-mono);
    font-size: 0.875rem;
    background: var(--bg-secondary);
    padding: 2px 6px;
    border-radius: var(--radius-sm);
}

.blog-post-content pre code {
    background: none;
    padding: 0;
}

.blog-post-content img {
    width: 100%;
    height: auto;
    border-radius: var(--radius-md);
    margin: var(--space-lg) 0;
}

.blog-post-footer {
    margin-top: var(--space-2xl);
    padding-top: var(--space-xl);
    border-top: 1px solid var(--border-secondary);
}

/* Table of Contents */
.table-of-contents {
    background: var(--bg-secondary);
    border: 1px solid var(--border-secondary);
    border-radius: var(--radius-lg);
    padding: var(--space-lg);
    margin: var(--space-xl) 0;
}

.toc-title {
    font-size: 1.125rem;
    font-weight: 600;
    color: var(--text-primary);
    margin-bottom: var(--space-md);
}

.toc-list {
    list-style: none;
    padding: 0;
    margin: 0;
}

.toc-list li {
    margin-bottom: var(--space-xs);
}

.toc-list a {
    color: var(--text-secondary);
    text-decoration: none;
    font-size: 0.875rem;
    transition: var(--transition-normal);
    display: block;
    padding: var(--space-xs) 0;
}

.toc-list a:hover {
    color: var(--accent-primary);
}

.toc-list a.active {
    color: var(--accent-primary);
    font-weight: 500;
}

/* Image with caption */
.image-with-caption {
    margin: var(--space-xl) 0;
}

.image-caption {
    text-align: center;
    font-size: 0.875rem;
    color: var(--text-secondary);
    font-style: italic;
    margin-top: var(--space-sm);
}

/* Author section */
.blog-author {
    display: flex;
    align-items: center;
    gap: var(--space-lg);
    padding: var(--space-lg);
    background: var(--bg-secondary);
    border: 1px solid var(--border-secondary);
    border-radius: var(--radius-lg);
    margin: var(--space-xl) 0;
}

.blog-author-img {
    width: 60px;
    height: 60px;
    border-radius: 50%;
    object-fit: cover;
}

.blog-author-info h4 {
    font-size: 1.125rem;
    font-weight: 600;
    color: var(--text-primary);
    margin-bottom: var(--space-xs);
}

.blog-author-info p {
    font-size: 0.875rem;
    color: var(--text-secondary);
    margin: 0;
}

/* Social share */
.social-share {
    display: flex;
    align-items: center;
    gap: var(--space-md);
    margin: var(--space-lg) 0;
}

.social-share span {
    font-size: 0.875rem;
    color: var(--text-secondary);
}

.social-share-links {
    display: flex;
    gap: var(--space-sm);
}

.social-share-button {
    width: 36px;
    height: 36px;
    display: flex;
    align-items: center;
    justify-content: center;
    background: var(--bg-secondary);
    border: 1px solid var(--border-secondary);
    border-radius: var(--radius-md);
    color: var(--text-secondary);
    cursor: pointer;
    transition: var(--transition-normal);
}

.social-share-button:hover {
    background: var(--accent-primary);
    border-color: var(--accent-primary);
    color: white;
}

/* Blog navigation */
.blog-post-navigation {
    display: flex;
    justify-content: space-between;
    align-items: center;
    gap: var(--space-lg);
    margin: var(--space-xl) 0;
    padding: var(--space-lg);
    background: var(--bg-secondary);
    border: 1px solid var(--border-secondary);
    border-radius: var(--radius-lg);
}

.blog-post-nav-link {
    display: flex;
    align-items: center;
    gap: var(--space-sm);
    color: var(--text-secondary);
    text-decoration: none;
    font-size: 0.875rem;
    transition: var(--transition-normal);
}

.blog-post-nav-link:hover {
    color: var(--accent-primary);
}

/* CTA Button */
.cta-button {
    display: inline-flex;
    align-items: center;
    gap: var(--space-sm);
    padding: var(--space-md) var(--space-lg);
    background: var(--accent-primary);
    color: white;
    text-decoration: none;
    border-radius: var(--radius-md);
    font-weight: 500;
    transition: var(--transition-normal);
    margin: var(--space-lg) 0;
}

.cta-button:hover {
    background: var(--accent-secondary);
    transform: translateY(-1px);
}

/* Featured Post Styles */
.featured-post-section {
    margin-bottom: var(--space-2xl);
}

.featured-post {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: var(--space-2xl);
    background: var(--bg-card);
    border: 1px solid var(--border-primary);
    border-radius: var(--radius-xl);
    padding: var(--space-2xl);
    margin-bottom: var(--space-2xl);
    position: relative;
    overflow: hidden;
}

.featured-post-image {
    position: relative;
    border-radius: var(--radius-lg);
    overflow: hidden;
}

.featured-post-image img {
    width: 100%;
    height: 300px;
    object-fit: cover;
    transition: transform var(--transition-normal);
}

.featured-post:hover .featured-post-image img {
    transform: scale(1.05);
}

.featured-badge {
    position: absolute;
    top: var(--space-md);
    left: var(--space-md);
    display: flex;
    align-items: center;
    gap: var(--space-xs);
    padding: var(--space-xs) var(--space-sm);
    background: var(--accent-primary);
    color: white;
    border-radius: var(--radius-full);
    font-size: 0.75rem;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.5px;
}

.featured-badge i {
    width: 14px;
    height: 14px;
}

.featured-post-content {
    display: flex;
    flex-direction: column;
    justify-content: center;
    gap: var(--space-lg);
}

.featured-meta {
    display: flex;
    align-items: center;
    gap: var(--space-md);
    color: var(--text-secondary);
    font-size: 0.875rem;
}

.featured-meta i {
    width: 16px;
    height: 16px;
}

.featured-category {
    padding: var(--space-xs) var(--space-sm);
    background: var(--bg-secondary);
    border: 1px solid var(--border-secondary);
    border-radius: var(--radius-full);
    font-size: 0.75rem;
    font-weight: 500;
    margin-left: auto;
}

.featured-title {
    font-size: 2rem;
    font-weight: 700;
    color: var(--text-primary);
    line-height: 1.2;
    margin: 0;
}

.featured-excerpt {
    color: var(--text-secondary);
    line-height: 1.6;
    font-size: 1.125rem;
    margin: 0;
    display: -webkit-box;
    -webkit-line-clamp: 3;
    line-clamp: 3;
    -webkit-box-orient: vertical;
    overflow: hidden;
}

.featured-link {
    display: inline-flex;
    align-items: center;
    gap: var(--space-sm);
    color: var(--accent-primary);
    text-decoration: none;
    font-weight: 600;
    transition: var(--transition-normal);
}

.featured-link:hover {
    color: var(--accent-secondary);
    transform: translateX(4px);
}

.featured-link i {
    width: 18px;
    height: 18px;
    transition: transform var(--transition-normal);
}

.featured-link:hover i {
    transform: translateX(2px);
}

/* Loading state */
.blog-loading {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    gap: var(--space-md);
    padding: var(--space-2xl);
    color: var(--text-secondary);
}

.blog-loading i {
    width: 32px;
    height: 32px;
    animation: spin 1s linear infinite;
}

@keyframes spin {
    from { transform: rotate(0deg); }
    to { transform: rotate(360deg); }
}

/* No posts message */
.no-posts-message {
    grid-column: 1 / -1;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    gap: var(--space-md);
    padding: var(--space-2xl);
    text-align: center;
    background: var(--bg-secondary);
    border: 1px solid var(--border-secondary);
    border-radius: var(--radius-lg);
    color: var(--text-secondary);
}

.no-posts-message i {
    width: 48px;
    height: 48px;
    color: var(--text-tertiary);
}

.no-posts-message h3 {
    font-size: 1.25rem;
    font-weight: 600;
    color: var(--text-primary);
    margin: 0;
}

.no-posts-message p {
    margin: 0;
    font-size: 0.875rem;
}

@media (max-width: 1024px) {
    .about-grid, .contact-grid {
        grid-template-columns: 1fr;
        gap: var(--space-2xl);
    }
    
    .about-sidebar {
        order: -1;
    }
    
    .projects-grid {
        grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
    }
}

@media (max-width: 768px) {
    .page-title {
        font-size: 2.5rem;
    }
    
    .page-description {
        font-size: 1.125rem;
    }
    
    .timeline {
        padding-left: var(--space-lg);
    }
    
    .timeline-marker {
        left: -27px;
        width: 20px;
        height: 20px;
    }
    
    .projects-grid {
        grid-template-columns: 1fr;
    }
}

@media (max-width: 640px) {
    .page-header {
        padding: calc(4rem + var(--space-xl)) 0 var(--space-xl);
    }
    
    .about-content, .blog-content, .projects-content, .contact-content {
        padding: var(--space-2xl) 0;
    }
    
    .about-section, .sidebar-card, .contact-form, .contact-item {
        padding: var(--space-lg);
    }
    
    .newsletter-form .form-group {
        flex-direction: column;
    }
    
    .newsletter-form .form-input {
        margin-bottom: var(--space-md);
    }
}
